<Window x:Class="Calculatore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculatore"
        mc:Ignorable="d"
        Title="Calculator" Height="500" Width="350" Background="#FF211F1F">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="resultLabel"
               Content="0"
               Grid.Row="1"
               Grid.ColumnSpan="4"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               FontSize="45"
               Foreground="White"
               />

        <Label x:Name="historyLabel" Content=""
                  Grid.ColumnSpan="4"
               Margin="2"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               FontSize="15"
               Foreground="GhostWhite"/>

        <Button x:Name="sevenButton"
        Content="7"
        Click="NumberButton_Click"
        Grid.Row="3"/>

        <Button x:Name="eightButton"
        Content="8"
        Click="NumberButton_Click"
        Grid.Row="3"
        Grid.Column="1"/>

        <Button x:Name="nineButton"
        Content="9"
        Click="NumberButton_Click"                
        Grid.Row="3"
        Grid.Column="2"/>

        <Button  x:Name="fourButton"
        Content="4"
        Click="NumberButton_Click"
        Grid.Row="4"/>

        <Button x:Name="fiveButton" 
        Content="5"
        Click="NumberButton_Click"
        Grid.Row="4"
        Grid.Column="1"/>

        <Button x:Name="sixButton"
        Content="6"
        Click="NumberButton_Click"
        Grid.Row="4"
        Grid.Column="2"/>

        <Button  x:Name="oneButton"
         Content="1"
        Click="NumberButton_Click"
        Grid.Row="5"/>

        <Button x:Name="twoButton"
            Content="2"
        Click="NumberButton_Click"
        Grid.Row="5"
        Grid.Column="1"/>

        <Button  x:Name="threeButton"
            Content="3"
        Click="NumberButton_Click"
        Grid.Row="5"
        Grid.Column="2"/>

        <Button  x:Name="zeroButton"
            Content="0"
        Click="NumberButton_Click"
        Grid.ColumnSpan="2"
        Grid.Row="6"
        Grid.Column="0"/>

        <Button  x:Name="acButton"
            Content="AC"
                 Click="AcButton_Click"
        Grid.Row="2"/>

        <Button  x:Name="negativeButton"
        Content="+/-"
        Click="NegativeButton_Click"
        Grid.Row="2"
        Grid.Column="1"/>

        <Button  x:Name="percentageButton"
                 Click="PercentageButton_Click"
        Content="%"
        Grid.Row="2"
        Grid.Column="2"/>

        <Button  x:Name="divideButton"
            Content="÷"
        Click="OperationButton_Click"
        Grid.Row="2"
        Grid.Column="3"/>

        <Button  x:Name="multiplicationButton" 
            Content="x"
        Click="OperationButton_Click"
        Grid.Row="3"
        Grid.Column="3"/>

        <Button  x:Name="minusButton"
            Content="-"
        Click="OperationButton_Click"
        Grid.Row="4"
        Grid.Column="3"/>

        <Button  x:Name="plusButton"
            Content="+"
        Click="OperationButton_Click"
        Grid.Row="5"
        Grid.Column="3"/>

        <Button  x:Name="equalButton"
        Content="="
        Grid.Row="6"
        Grid.Column="3"
        Background="#FFAB6B0D"/>

        <Button  x:Name="pointButton"
        Content="."
        Grid.Row="6"
        Grid.Column="2"/>


    </Grid>
</Window>
